{
  "name": "haxfred-link-app",
  "version": "0.0.0",
  "description": "---",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node index.js",
    "dev": "npm run build:watch & node index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && browserify public/js/app.js -o dist/js/app.js",
    "build:watch": "watchify public/js/app.js -o dist/js/app.js",
    "clean": "rm -rf dist && mkdir -p dist/{css,js}"
  },
  "browserify": {
    "transform": [
      "hbsfy"
    ]
  },
  "author": "haxiom",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.9.2",
    "cors": "^2.5.0",
    "express": "^4.10.1",
    "handlebars": "^1.3.0",
    "hbs": "^2.7.0",
    "morgan": "^1.4.1",
    "serve-static": "^1.7.1",
    "superagent": "^0.20.0"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "hbsfy": "^2.2.0",
    "watchify": "^2.1.0"
  }
}
