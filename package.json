{
  "name": "haxfred-link-app",
  "version": "0.0.0",
  "description": "---",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node index.js",
    "dev": "npm run build:watch & node index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "standard | snazzy",
    "build": "npm run clean && browserify public/js/app.js -o dist/js/app.js",
    "build:production": "npm run clean && browserify public/js/app.js | uglifyjs > dist/js/app.js",
    "build:watch": "watchify public/js/app.js -o dist/js/app.js",
    "clean": "rm -rf dist && mkdir -p dist/css dist/js"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "author": "haxiom",
  "license": "ISC",
  "dependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "body-parser": "^1.9.2",
    "browserify": "^13.0.0",
    "express": "^4.10.1",
    "morgan": "^1.4.1",
    "react": "^0.14.7",
    "react-dom": "^0.14.7"
  },
  "devDependencies": {
    "snazzy": "^3.0.0",
    "standard": "^6.0.8",
    "watchify": "^3.7.0"
  }
}
